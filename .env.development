# TuneMantra Development Environment Configuration
# ===============================================
# These settings are optimized for local development

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://postgres:plplopop@localhost:5432/postgres

# ===== SERVER CONFIGURATION =====
PORT=5000
NODE_ENV=development
HOST=0.0.0.0
APP_URL=http://localhost:5000

# ===== AUTHENTICATION =====
SESSION_SECRET=dev_session_secret_replace_in_production
JWT_SECRET=dev_jwt_secret_replace_in_production
JWT_EXPIRY=7d
SUPER_ADMIN_REGISTRATION_CODE=admin123
ADMIN_REGISTRATION_CODE=admin123

# ===== SECURITY =====
ENCRYPTION_KEY=dev_encryption_key_replace_in_production

# ===== FILE STORAGE =====
MAX_FILE_SIZE=100
UPLOAD_DIR=./uploads

# ===== ARTIFICIAL INTELLIGENCE =====
# Uncomment and add your OpenAI API key to enable AI features
# OPENAI_API_KEY=
AI_MAX_TOKENS=4000
AI_CONTENT_MODEL=gpt-4
AI_ANALYSIS_MODEL=gpt-4-turbo

# ===== PAYMENT PROCESSING =====
# Using Razorpay test credentials
RAZORPAY_KEY_ID=rzp_test_YourTestKeyId
RAZORPAY_SECRET=YourRazorpayTestSecret
RAZORPAY_WEBHOOK_SECRET=YourRazorpayTestWebhookSecret

# ===== EMAIL CONFIGURATION =====
# For development, emails will be logged to console instead of sent
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test
EMAIL_FROM=dev@tunemantra.local

# ===== FEATURE FLAGS =====
ENABLE_AI_FEATURES=true
ENABLE_DISTRIBUTION=true
ENABLE_RIGHTS_MANAGEMENT=true
ENABLE_BLOCKCHAIN=true
BLOCKCHAIN_SIMULATION=true

# ===== BLOCKCHAIN CONFIGURATION =====
# Test network configuration
BLOCKCHAIN_PROVIDER_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key
BLOCKCHAIN_PRIVATE_KEY=your_test_private_key
MUSIC_RIGHTS_REGISTRY_ADDRESS=0x1234567890123456789012345678901234567890
ROYALTY_SPLITTER_ADDRESS=0x1234567890123456789012345678901234567890
MUSIC_NFT_ADDRESS=0x1234567890123456789012345678901234567890

# Mumbai Testnet Configuration (Using Test Data)
MUMBAI_RPC_URL=https://polygon-mumbai-bor.publicnode.com
MUMBAI_PRIVATE_KEY=0123456789012345678901234567890123456789012345678901234567890123
MUMBAI_NFT_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
MUMBAI_RIGHTS_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# ===== CACHING =====
# Local Redis or in-memory for development
# REDIS_URL=redis://localhost:6379

# ===== MONITORING & ANALYTICS =====
ENABLE_MONITORING=false
# SENTRY_DSN=

# ===== LOGGING =====
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# ===== RATE LIMITING =====
ENABLE_RATE_LIMITING=false
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MINS=60