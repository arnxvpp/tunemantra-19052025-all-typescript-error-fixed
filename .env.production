# TuneMantra Platform - Production Environment Configuration
# This file contains sensitive configuration and should not be committed to version control

# General Settings
NODE_ENV=production
API_URL=https://api.tunemantra.com
CLIENT_URL=https://app.tunemantra.com
PORT=8080

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/tunemantra_prod
POSTGRES_USER=tunemantra_prod_user
POSTGRES_PASSWORD=strong_password_here
POSTGRES_DB=tunemantra_prod_db

# Session Management
SESSION_SECRET=your_strong_session_secret_here
JWT_SECRET=your_strong_jwt_secret_here
COOKIE_SECRET=your_strong_cookie_secret_here
TOKEN_EXPIRY=24h

# Blockchain Network Configuration
# Polygon Mumbai (TestNet)
POLYGON_MUMBAI_RPC_URL=https://polygon-mumbai.infura.io/v3/your_infura_key
POLYGON_MUMBAI_CHAIN_ID=80001
POLYGON_MUMBAI_RIGHTS_CONTRACT=0x1234567890123456789012345678901234567890
POLYGON_MUMBAI_NFT_CONTRACT=0x2345678901234567890123456789012345678901

# Polygon Mainnet
POLYGON_MAINNET_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_key
POLYGON_MAINNET_CHAIN_ID=137
POLYGON_MAINNET_RIGHTS_CONTRACT=0x3456789012345678901234567890123456789012
POLYGON_MAINNET_NFT_CONTRACT=0x4567890123456789012345678901234567890123

# Ethereum Mainnet
ETH_MAINNET_RPC_URL=https://mainnet.infura.io/v3/your_infura_key
ETH_MAINNET_CHAIN_ID=1
ETH_MAINNET_RIGHTS_CONTRACT=0x5678901234567890123456789012345678901234
ETH_MAINNET_NFT_CONTRACT=0x6789012345678901234567890123456789012345

# Optimism Mainnet
OPTIMISM_MAINNET_RPC_URL=https://optimism-mainnet.infura.io/v3/your_infura_key
OPTIMISM_MAINNET_CHAIN_ID=10
OPTIMISM_MAINNET_RIGHTS_CONTRACT=0x7890123456789012345678901234567890123456

# Base Mainnet
BASE_MAINNET_RPC_URL=https://base-mainnet.infura.io/v3/your_infura_key
BASE_MAINNET_CHAIN_ID=8453
BASE_MAINNET_RIGHTS_CONTRACT=0x8901234567890123456789012345678901234567

# Blockchain Account
ETH_ACCOUNT_ADDRESS=0x1234567890123456789012345678901234567890
ETH_ACCOUNT_PRIVATE_KEY=your_private_key_here

# Blockchain Settings
BLOCKCHAIN_DEFAULT_NETWORK=polygon
BLOCKCHAIN_SIMULATION=false
BLOCKCHAIN_MAX_RETRIES=3
BLOCKCHAIN_RETRY_DELAY=5000

# IPFS Storage
IPFS_API_KEY=your_ipfs_api_key
IPFS_API_SECRET=your_ipfs_api_secret
IPFS_GATEWAY_URL=https://ipfs.tunemantra.com/ipfs/

# External Services
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-west-2
AWS_S3_BUCKET=tunemantra-assets-prod

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
EMAIL_FROM=noreply@tunemantra.com

# Logging & Monitoring
LOG_LEVEL=info
SENTRY_DSN=https://your_sentry_dsn_here@o123456.ingest.sentry.io/1234567

# Analytics
ANALYTICS_API_KEY=your_analytics_api_key
ANALYTICS_ENDPOINT=https://analytics.tunemantra.com/api/v1/track

# Feature Flags
FEATURE_BLOCKCHAIN_ENABLED=true
FEATURE_RIGHTS_MANAGEMENT=true
FEATURE_NFT_MINTING=true
FEATURE_ROYALTY_SPLITTING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_AI_RECOMMENDATIONS=true